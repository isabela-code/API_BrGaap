{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build-backend",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"build",
				"backend/TodoApp.sln"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build"
		},
		{
			"label": "run-backend",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--project",
				"backend/src/TodoApi"
			],
			"isBackground": true,
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "test-backend",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"test",
				"backend/TodoApp.sln"
			],
			"problemMatcher": [
				"$msCompile"
			],
			"group": "test"
		}
	]
}